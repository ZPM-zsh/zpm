#!/usr/bin/env zunit
@test 'Check Base Plugins' {
  load ../zpm

  assert "$zsh_loaded_plugins" contains "zpm-zsh/colors"
  assert "$zsh_loaded_plugins" contains "zpm-zsh/helpers"
  assert "$zsh_loaded_plugins" contains "zpm-zsh/colors"
}


@test 'Check Install Plugin' {
  load ../zpm

  assert "$zsh_loaded_plugins" contains "zpm-zsh/empty"
}

@teardown {
  rm -rf "$ZPM_PLUGIN_DIR"
}
