#!/usr/bin/env zsh

source ${${(%):-%x}:a:h}/../lib/functions.zsh

if [[ "$CLICOLOR" == "1" ]]; then
  
  typeset -gA c
  
  c_bold="[1m"
  
  c[black]="[30m"
  c[red]="[31m"
  c[green]="[32m"
  c[yellow]="[33m"
  c[blue]="[34m"
  c[magenta]="[35m"
  c[cyan]="[36m"
  c[grey]="[37m"
  
fi

_ZPM-log zpm:upgrade "Upgrade ${2}"

local Plugin_path=$(_ZPM-get-plugin-path $2)
local Plugin_url=$(_ZPM-get-plugin-url $2)

if [[ "$1" == "upgrade" ]]; then
  type="Upgrade"
  git --git-dir="${Plugin_path}/.git/" --work-tree="${Plugin_path}/" checkout "${Plugin_path}/" </dev/null >/dev/null 2>/dev/null
  git --git-dir="${Plugin_path}/.git/" --work-tree="${Plugin_path}/" pull </dev/null >/dev/null 2>/dev/null
else
  type="Install"
  git clone --recursive "https://github.com/"${2}".git" "$Plugin_path" </dev/null >/dev/null 2>/dev/null
fi

local upgrade_string=""

upgrade_string+="${c[green]}${c_bold}${type}${c_reset} "
upgrade_string+=$'\033]8;;'"$Plugin_url"$'\a'
upgrade_string+="${c[blue]}${c_bold}${2//\//${c[red]}${c_bold}/${c[blue]}${c_bold}}"
upgrade_string+=$'\033]8;;\a'
upgrade_string+="${c_reset}"

echo $upgrade_string
